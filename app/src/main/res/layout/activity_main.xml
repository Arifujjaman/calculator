<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="7"
                android:textSize="30sp"
                android:id="@+id/btn7"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="8"
                android:textSize="30sp"
                android:id="@+id/btn8"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="9"
                android:textSize="30sp"
                android:id="@+id/btn9"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="+"
                android:textSize="30sp"
                android:id="@+id/btnadd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="4"
                android:textSize="30sp"
                android:id="@+id/btn4"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="5"
                android:textSize="30sp"
                android:id="@+id/btn5"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="6"
                android:textSize="30sp"
                android:id="@+id/btn6"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="-"
                android:textSize="30sp"
                android:id="@+id/btnsub"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="1"
                android:textSize="30sp"
                android:id="@+id/btn1"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="2"
                android:textSize="30sp"
                android:id="@+id/btn2"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="3"
                android:textSize="30sp"
                android:id="@+id/btn3"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="x"
                android:textSize="30sp"
                android:id="@+id/btnmul"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="0"
                android:textSize="30sp"
                android:id="@+id/btn0"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="."
                android:textSize="30sp"
                android:id="@+id/btndot"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="mOd"
                android:textSize="30sp"
                android:id="@+id/btnmod"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:text="/"
                android:textSize="30sp"
                android:id="@+id/btndiv"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="190dp"
                android:layout_height="75dp"
                android:text="ac"
                android:textSize="30sp"
                android:id="@+id/btnac"/>
            <Button
                android:layout_width="190dp"
                android:layout_height="75dp"
                android:text="="
                android:textSize="30sp"
                android:id="@+id/btneq"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>